---
import TwSizeIndicator from "@/components/TwSizeIndicator.astro";
import SEO, { type Props as SEOProps } from "@/components/SEO.astro";
import StructuredData, { type Props as StructuredDataProps } from "@/components/StructuredData.astro";
import Footer from "@/partials/Footer.astro";
import Header from "@/partials/Header.astro";
import "@/styles/main.css";
import { ClientRouter } from "astro:transitions";

// types for frontmatters
export interface Props {
  seo: SEOProps;
  structuredData?: StructuredDataProps;
}

const { seo, structuredData } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="RocketSim" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta property="og:locale" content="en_US" />

    <!-- theme meta -->
    <meta name="msapplication-TileColor" content="#000000" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="#000"
    />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <!-- responsive meta -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5"
    />

    <!-- sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- SEO Meta Tags (title, description, Open Graph, Twitter Cards) -->
    <SEO {...seo} />

    <!-- Structured Data (JSON-LD) -->
    {structuredData && <StructuredData {...structuredData} />}

    <ClientRouter />

    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-59LFW4F4");
    </script>
    <!-- End Google Tag Manager -->

    <!-- Privacy-friendly analytics by Plausible -->
    <script
      is:inline
      defer
      src="https://plausible.io/js/pa-UU6kf044LfXx1I_nLu86Q.js"></script>
    <script>
      ((window.plausible =
        window.plausible ||
        function () {
          (plausible.q = plausible.q || []).push(arguments);
        }),
        (plausible.init =
          plausible.init ||
          function (i: any) {
            plausible.o = i || {};
          }));
      plausible.init();
    </script>
    <script>
      /// This adds event listeners to our inline forms
      /// and sends an event to Plausible.
      (function () {
        document.addEventListener(
          "submit",
          function (event: any) {
            if (event.target.dataset.svForm) {
              plausible("Newsletter Form Conversion");
              console.log("Newsletter Form Conversion");
            }
          },
          true,
        );
      })();
    </script>
    <!-- End Plausible -->

    <!-- ConvertKit Insights -->
    <script type="text/javascript" is:inline>
      var _segq = _segq || [];
      var _segs = _segs || {};
      (function () {
        var dc = document.createElement("script");
        dc.type = "text/javascript";
        dc.async = true;
        dc.src = "//insights-tag.convertkit.com/tag/aZB2eA.js";
        var s = document.getElementsByTagName("script")[0];
        s.parentNode.insertBefore(dc, s);
      })();
    </script>
    <!-- ConvertKit Insights END -->

    <!-- SegMetrics -->
    <script type="text/javascript" is:inline>
      var _segq = _segq || [];
      var _segs = _segs || {};
      (function () {
        var dc = document.createElement("script");
        dc.type = "text/javascript";
        dc.async = true;
        dc.src = "//segabc.avanderlee.com/tag/aEkjjq.js";
        var s = document.getElementsByTagName("script")[0];
        s.parentNode.insertBefore(dc, s);
      })();
    </script>
    <!-- SegMetrics END -->
  </head>
  <body class="antialiased">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-59LFW4F4"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <TwSizeIndicator />
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
    <script>
      import config from "@/config/config.json";
      const sticky_header = config.settings.sticky_header;
      const stickyNavInit = () => {
        // fix header on 100px scroll and get back to normal on 90px scroll
        const header = document.querySelector(".header");
        let lastScroll = 0;
        const onScroll = () => {
          const currentScroll = window.pageYOffset;
          if (
            sticky_header &&
            currentScroll > 1 &&
            currentScroll > lastScroll &&
            header
          ) {
            header.classList.add(
              "fixed",
              "!top-0",
              "bg-body/30",
              "backdrop-blur-lg",
              "border-border",
              "show-active-item",
            );
            header.classList.remove("border-transparent");
          } else if (currentScroll < 1 && header) {
            header.classList.remove(
              "fixed",
              "!top-0",
              "bg-body/30",
              "backdrop-blur-lg",
              "border-border",
              "show-active-item",
            );
            header.classList.add("border-transparent");
          }
          lastScroll = currentScroll;
        };
        window.addEventListener("scroll", onScroll);
        onScroll(); // Check scroll position on page load
      };

      // AOS init
      import AOS from "aos";
      import "aos/dist/aos.css";

      let scrollRef = 0;

      // Fix `not animating although in viewport` issue
      window.addEventListener("scroll", function () {
        scrollRef <= 10 ? scrollRef++ : AOS.refresh();
      });

      function aosInit() {
        AOS.init({
          duration: 600,
          offset: 100,
          once: true,
        });
      }

      document.addEventListener("astro:page-load", () => {
        stickyNavInit();
        aosInit();
      });

      document.addEventListener("astro:after-swap", () => {
        aosInit();
      });
    </script>
  </body>
</html>
