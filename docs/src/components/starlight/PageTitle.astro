---
// Custom PageTitle component that displays the description as a subtitle
// For the docs homepage, add CTA buttons after the description
const { title, description } = Astro.locals.starlightRoute.entry.data;
const id = Astro.locals.starlightRoute.id;
const isHomepage = id === "docs";
---

<h1 id="_top">{title}</h1>
{description && <p class="page-subtitle">{description}</p>}
{
  isHomepage && (
    <div class="homepage-actions">
      <a href="/docs/getting-started/onboarding" class="action-button primary">
        Get Started â†’
      </a>
      <a
        href="/docs/getting-started/product-tour-and-quick-demos"
        class="action-button secondary"
      >
        Product Tour
      </a>
    </div>
  )
}

<style>
  h1 {
    margin-bottom: 0.5rem;
    margin-top: 1rem;
    font-size: var(--sl-text-h1);
    line-height: var(--sl-line-height-headings);
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .page-subtitle {
    margin-top: 0;
    margin-bottom: 1.5rem;
    font-size: var(--sl-text-lg);
    color: var(--sl-color-gray-3);
    line-height: 1.5;
  }

  :global([data-theme="light"]) .page-subtitle {
    color: var(--sl-color-gray-4);
  }

  .homepage-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .action-button {
    display: inline-block;
    padding: 0.75rem 1.25rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 600;
    font-size: var(--sl-text-base);
    transition: all 0.2s ease;
  }

  .action-button.primary {
    background: #0093ff;
    color: white;
  }

  .action-button.primary:hover {
    background: #0062cc;
  }

  .action-button.secondary {
    background: transparent;
    color: var(--sl-color-white);
    border: 1px solid var(--sl-color-gray-5);
  }

  .action-button.secondary:hover {
    border-color: var(--sl-color-text-accent);
    background: var(--sl-color-gray-6);
  }
</style>
