---
import SectionHeader from "./SectionHeader.astro";

interface Props {
  title: string;
  chart: {
    title: string;
    data: Array<{ title: string; value: number; width: number }>;
  };
  contentTitle: string;
}

const { title, chart, contentTitle } = Astro.props;
---

<style>
  .content-wrapper {
    margin-top: 2rem;

    @media (min-width: 800px) {
      margin-top: 4rem;
    }
  }

  figure {
    margin: 0;

    @media (min-width: 800px) {
      grid-column: span 6;
    }
  }

  .description-wrapper {
    @media (min-width: 800px) {
      grid-column: span 6;
    }
  }

  figcaption {
    margin: 0 0 1rem;
  }

  dl {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 0;
  }

  .chart-row {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  dt,
  dd {
    width: 100%;
    margin: 0;

    text-align: left;
  }

  dt {
    order: 2;

    color: #fff;
  }

  dd {
    order: 1;
  }

  dd {
    display: flex;
    align-items: center;
  }

  .bar-container {
    display: flex;
    align-items: center;
    width: 100%;
  }

  .bar {
    height: 0.375rem;
    width: var(--progress);
    margin-right: 0.375rem;

    background: linear-gradient(45deg, #3961d0, #5d94e2 50%, #71aef1);
    border-radius: 0.25rem;
  }

  .value {
    font-size: 0.75rem;
    font-weight: bold;
    color: #7dc4fa;
  }

  .title {
    margin: 0 0 0.5rem;

    font-size: 2rem;
    font-weight: 500;
    line-height: 1.2;
  }
</style>

<section>
  <SectionHeader title={title} />
  <div class="grid content-wrapper">
    <figure aria-label="Build Duration by Machine">
      <figcaption>{chart.title}</figcaption>
      <dl>
        {
          chart.data.map((item) => (
            <div class="chart-row">
              <dt>{item.title}</dt>
              <dd>
                <div class="bar-container">
                  <div
                    class="bar"
                    style={{ "--progress": `${item.width * 100}%` }}
                  ></div>
                  <span class="value">{item.value}s</span>
                </div>
              </dd>
            </div>
          ))
        }
      </dl>
    </figure>
    <div class="description-wrapper">
      <h3 class="title">{contentTitle}</h3>
      <slot/>
    </div>
  </div>
</section>
